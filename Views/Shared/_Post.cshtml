@inject ExploreCalifornia.Models.FormattingService Format
@model ExploreCalifornia.Models.Post


<article class="blog-post">
    @*@Model.Title<!--ViewBag.Title-->*@
    <h1>
        @Html.ActionLink(Model.Title, "Post", "Blog",
            new { year = Model.Posted.Year, month = Model.Posted.Month, key = Model.Key }
        )
    </h1>
        <div class="details">
            Posted <span>@Format.AsReadDate(Model.Posted)</span> by <span>@Model.Author</span> <!--ViewBag.Posted ViewBag.Author-->
        </div>@*@Model.Posted.ToString("d")*@
        <div class="content">
            @Model.Body   <!--ViewBag.Body-->
        </div>
</article>
